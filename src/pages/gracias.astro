---
import Layout from '../layouts/Layout.astro';
import FooterBottom from "@components/FooterBottom.astro";

import { Image } from "astro:assets";

// Importación de la imagen descriptiva de la empresa
import empresaImage from "@assets/images/corporativo-construyendo-soluciones---.webp";

---

<Layout
  title="Mensaje Recibido" 
  description="Gracias por tu interés en soluciones GAF para impermeabilización. Pronto recibirás nuestra respuesta. Para atención inmediata llama al 33-1079-3173."
  ogtype="website"
  ogimage="https://www.impergaf.w365.uno/images/impermeabilizantes-gaf-mexico-og.webp"
  noindex
>
  <slot />

<section class="bg-ghostwhite py-24 " id="gracias">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row gap-[35px] items-center">
    
    <!-- Bloque de descripción -->
    <div class="w-full md:w-1/2 bg-white rounded-md p-6">
      <h2 class="text-primary text-3xl font-bold mb-4 leading-snug" data-aos="zoom-in-up">¡Gracias por contactarnos!</h2>
      <p class="text-gray-700 text-lg leading-relaxed" data-aos="zoom-in-up">
        Nuestro equipo está trabajando para revisar tu mensaje y te responderemos lo más pronto posible. Mientras tanto, si tienes alguna pregunta urgente o necesitas asistencia inmediata, no dudes en llamarnos al 33-1079-3173.
      </p>
    </div>
    
    <!-- Imagen descriptiva de la empresa -->
    <div class="w-full md:w-1/2">
      <Image
        src={empresaImage}
        alt="Corporativo construyendo soluciones"
        class="rounded-lg w-full h-auto"
        width={600}
        height={400}
        loading="lazy"
        data-aos="zoom-in-up"
      />
    </div>

    
  </div>
</section>

<FooterBottom />
</Layout>