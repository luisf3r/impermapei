---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import PhoneList from "@components/PhoneList.astro";
import WhatsAppList from "@components/WhatsAppList.astro";
import ContactForm from "@components/ContactForm.astro";
import heroImage from "@assets/images/impermeabilizantes-mapei-en-mexico.webp";

// Beneficios destacados del Hero
const beneficiosHero = [
  {
    icon: "mdi:shield-star",
    text: "40 Años de Experiencia"
  },
  {
    icon: "mdi:certificate-outline",
    text: "Instaladores Certificados"
  },
  {
    icon: "mdi:file-document-check",
    text: "Garantía por Escrito"
  },
  {
    icon: "mdi:clock-fast",
    text: "Asesoría Sin Costo"
  }
];
---

<section 
  class="min-h-screen pt-8 pb-16 bg-[url('/src/assets/images/fondos/fondo-gotas-izq-der.webp')] bg-cover bg-center bg-no-repeat relative overflow-hidden" 
  id="inicio"
>
  <!-- Overlay degradado mejorado -->
  <div class="absolute inset-0 bg-gradient-to-br from-white/80 via-white/60 to-white/50"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">


    <!-- Contenido principal -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start">
      
      <!-- Columna Izquierda - Contenido principal -->
      <div class="lg:col-span-7 space-y-8">
        
        <!-- Imagen principal con efectos -->
        <div class="relative group" data-aos="zoom-in-up">
          <div class="absolute -inset-4 bg-gradient-to-r from-blue-300 to-accent rounded-2xl opacity-30 group-hover:opacity-50 transition-opacity duration-300 blur-lg"></div>
          <Image
            src={heroImage}
            alt="Impermeabilizantes Mapei en México - Líder en protección de construcciones"
            class="relative rounded-2xl w-full h-auto shadow-2xl group-hover:shadow-3xl transition-all duration-500 transform group-hover:scale-[1.02]"
            width={heroImage.width}
            height={heroImage.height}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 70vw, 60vw"
            densities={[1, 1.5, 2]}
            loading="eager"
          />
        </div>

        <!-- Títulos y descripción -->
        <div class="space-y-6">
          <div data-aos="fade-up" data-aos-delay="100">
            <h1 class="text-primary text-4xl lg:text-5xl font-bold leading-tight mb-4">
              Impermeabilizantes
              <span class="text-accent block">Mapei en México</span>
            </h1>
            <h2 class="text-primary/80 text-xl lg:text-2xl font-medium leading-relaxed">
              Protección Definitiva para Tu Construcción con Servicio de 
              <span class="text-accent font-semibold">Instalación Garantizado por Escrito</span>
            </h2>
          </div>

          <!-- Línea decorativa -->
          <div class="w-24 h-1 bg-gradient-to-r from-accent to-blue-500" data-aos="fade-up" data-aos-delay="200"></div>

          <!-- Descripción principal -->
          <div class="space-y-4" data-aos="fade-up" data-aos-delay="300">
            <p class="text-primary text-lg lg:text-xl leading-relaxed">
              Con <strong class="text-accent">40 años de experiencia</strong> y un equipo de
              <strong class="text-primary">instaladores certificados por Mapei</strong>, aseguramos la
              máxima protección y durabilidad para tu inversión.
            </p>
            <p class="text-gray-600 text-lg leading-relaxed">
              Desde techos y terrazas hasta cisternas y cimentaciones, tenemos la 
              <strong class="text-accent">solución perfecta</strong> para cada proyecto de construcción.
            </p>
          </div>

          <!-- Beneficios destacados -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4" data-aos="fade-up" data-aos-delay="400">
            {beneficiosHero.map((beneficio, index) => (
              <div class="flex flex-col items-center text-center p-3 bg-white/70 backdrop-blur-sm rounded-xl shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105">
                <Icon name={beneficio.icon} class="text-accent text-3xl mb-2" />
                <span class="text-primary font-semibold text-sm leading-tight">{beneficio.text}</span>
              </div>
            ))}
          </div>

          
        </div>
      </div>

      <!-- Columna Derecha - Formulario de contacto -->
      <div class="lg:col-span-4">
        <div class="sticky top-8">
          <div 
            class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20" 
            data-aos="fade-left" 
            data-aos-delay="300"
          >
            
            <!-- Header del formulario -->
            <div class="text-center mb-8">
              <h2 class="text-accent text-2xl font-bold mb-2">
                Habla con un Experto
              </h2>
              <p class="text-primary font-semibold text-lg">
                ¡ASESORÍA GRATIS!
              </p>
              <div class="w-16 h-1 bg-gradient-to-r from-accent to-blue-500 mx-auto mt-3"></div>
            </div>

            <!-- Información de contacto rápido -->
            <div class="mb-0">
              <div class="grid grid-cols-1 gap-4">
                <div class="p-4 bg-gradient-to-r from-green-50 to-green-100 rounded-xl border border-green-200">
                  <h3 class="text-green-700 font-semibold mb-3 flex items-center gap-2">
                    <Icon name="mdi:whatsapp" class="w-5 h-5" />
                    WhatsApp
                  </h3>
                  <WhatsAppList />
                </div>
                
                <div class="p-4 bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl border border-blue-200">
                  <h3 class="text-blue-700 font-semibold mb-3 flex items-center gap-2">
                    <Icon name="mdi:phone" class="w-5 h-5" />
                    Llamada
                  </h3>
                  <PhoneList />
                </div>
              </div>
            </div>

            <!-- Separador -->
            <div class="flex items-center my-6">
              <div class="flex-1 h-px bg-gray-300"></div>
                <h3 class="text-primary text-xl font-semibold">ó envía un mensaje</h3>
              <div class="flex-1 h-px bg-gray-300"></div>
            </div>

            <!-- Formulario -->
            <div>
              <ContactForm />
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
